<?xml version="1.0" encoding="UTF-8"?>
<included>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <property name="LOG_FILE" value="${LOG_FILE}"/>

    <springProperty scope="context" name="maxRollingFileSize" source="eagle.config.logging.max-rolling-file-size"/>
    <springProperty scope="context" name="maxRollingFileHistoryInDays" source="eagle.config.logging.max-rolling-file-history-in-days"/>
    <springProperty scope="context" name="totalRollingFileSizeCap" source="eagle.config.logging.total-rolling-file-size-cap"/>

    <appender name="EAGLE_LOG_FILE_APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>${maxRollingFileSize}</maxFileSize>
            <maxHistory>${maxRollingFileHistoryInDays}</maxHistory>
            <totalSizeCap>${totalRollingFileSizeCap}</totalSizeCap>
        </rollingPolicy>
    </appender>

    <root level="INFO">
        <appender-ref ref="EAGLE_LOG_FILE_APPENDER" />
    </root>

</included>





